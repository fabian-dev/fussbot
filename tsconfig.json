{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "removeComments": true,
    "types": [
      "node", "jest"
    ],
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
  ]
}